{
	"compilerOptions": {
		"strict": true,
		"module": "CommonJS",
		"target": "ES2020",
		"lib": ["ES2020"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "."
	},
	"include": ["nodes/**/*.ts", "credentials/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
